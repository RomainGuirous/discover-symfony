{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
        </tbody>
    </table>

    <h1>Programs associated :</h1>
    <ul>
        {% for program in programs %}
            <li>
                <a href="{{ path('program_show' , { slug: program.slug } ) }}">
                    {{ program.title }}
                </a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_actor_index') }}">Back To List</a>
    <br>

    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">Edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
